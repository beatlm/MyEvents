<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/cab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/darkBlue">
    

        <ImageView
            android:id="@+id/userPhotoCab"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/userImageCab"
            android:src="@drawable/abc_spinner_ab_focused_holo_light" />
        <TextView
            android:id="@+id/userNameCab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre" 
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/myEventsCab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myEvents" 
             android:color="@color/blue"
             android:textColor="@color/white"
             android:layout_gravity="right"/>

    </LinearLayout>
    

